<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan" >

    <Button
        android:id="@+id/btn_guzergahekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/img_guzergahekle" />

    <Button
        android:id="@+id/btn_guzergahlistele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_guzergahekle"
        android:layout_below="@+id/btn_guzergahekle"
        android:layout_marginTop="30dp"
        android:background="@drawable/guzergahlistele" />

    <Button
        android:id="@+id/btn_profilbilgisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_guzergahlistele"
        android:layout_below="@+id/btn_guzergahlistele"
        android:layout_marginTop="32dp"
        android:background="@drawable/profilbilgisi" />

    <Button
        android:id="@+id/btn_anamenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_profilbilgisi"
        android:layout_below="@+id/btn_profilbilgisi"
        android:layout_marginTop="33dp"
        android:background="@drawable/anamenu" />

</RelativeLayout>